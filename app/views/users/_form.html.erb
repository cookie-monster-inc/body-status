<%= form_for user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, :required => true %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name, :required => true %>
  <%= f.label :email %>
  <%= f.text_field :email, :required => true, :pattern => '\w+[\.\w\-]*@\w+\.\w{2,5}'%>
  <%= f.label :password %>
  <%= f.password_field :password, :required => true, :pattern => '.{6,40}' %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :required => true, :pattern => '.{6,40}' %>
  <%= f.submit %>
<% end %>